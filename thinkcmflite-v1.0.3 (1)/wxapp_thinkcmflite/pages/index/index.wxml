<view class="list-view">

    <block wx:for="{{list}}" wx:key="id">
        <view class="weui-panel weui-panel_access" bindtap="onListItemTap" data-id="{{item.id}}">
            <view class="weui-media-box weui-media-box_appmsg asset-media-box"
                  hover-class="weui-cell_active" hover="{{true}}">
                
                <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                    <view class="weui-media-box__title">{{item.post_title}}</view>
                    <view class="weui-media-box__desc">{{item.post_excerpt}}</view>
                </view>
                <block wx:if="{{item.more.thumbnail}}">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="{{item.more.thumbnail}}" catchtap="previewImage"
                               data-preview-url="{{item.more.thumbnail}}" mode="aspectFill"/>
                    </view>
                </block>
                <block wx:if="{{item.more.thumbnail==''}}">

                </block>
              
            </view>
        </view>
    </block>
    <include src="../../components/loading_more.wxml"/>
</view>

